@charset 'UTF-8';

/* app css stylesheet */
::-webkit-scrollbar {width:13px;height:13px;}
::-webkit-scrollbar-track-piece {background-color:#f5f5f5;border-left:1px solid #d2d2d2;}
::-webkit-scrollbar-thumb {background-color:#c2c2c2;background-clip:padding-box;border:1px solid #979797;min-height:28px;}
::-webkit-scrollbar-thumb:hover {border:1px solid #636363;background-color:#929292;}

.no-select {-moz-user-select: none;-khtml-user-select: none;-webkit-user-select: none;user-select: none}

.topbar{
    height: 32px;
    min-height: 32px;border-radius: 0px;
    background-color: #2c2c2c;
    background-image: -moz-linear-gradient(top, #333333, #222222);
    background-image: -ms-linear-gradient(top, #333333, #222222);
    background-image: -webkit-gradient(linear, 0 0, 0 100%, from(#333333), to(#222222));
    background-image: -webkit-linear-gradient(top, #333333, #222222);
    background-image: -o-linear-gradient(top, #333333, #222222);
    background-image: linear-gradient(top, #333333, #222222);
    background-repeat: repeat-x;
    filter: progid:DXImageTransform.Microsoft.gradient(startColorstr='#333333', endColorstr='#222222', GradientType=0);
    margin-bottom: 0;
}
.topbar * {
    box-sizing: content-box;
}
.topbar .container {width: auto;padding-left: 8px;padding-right: 8px;}
.topbar .navbar-brand {line-height: 30px;height: 30px;padding: 0;}
.topbar .navbar-collapse {padding: 0;}
.topbar {border-color: #101010;}
.topbar .navbar-nav li a {
    color: #ffffff;
    line-height: 30px;
    height: 30px;
    padding-top: 0;
    border-right: 1px solid #464444;
    padding-bottom: 0;
}
.topbar .navbar-nav li.active a {
    color: #ffe000;
}
.topbar .navbar-nav > .open > a, .topbar .navbar-nav > .open > a:hover, .topbar .navbar-nav > .open > a:focus {
    background-color: #ffffff;
    color: #080808;
    border-width: 0px 0px 0 1px;
    border-style: solid;
    border-color: #2A313B;
    line-height: 32px;
    height: 32px;
}

.topbar .dropdown-menu {width: 480px; padding: 10px;border-top: 0;}
.topbar .dropdown-menu li {
    float: left;
    width: 160px;
    padding: 5px 0;
}
.topbar .dropdown-menu li a {
    color: #000000;
    border-right: 0px solid #464444;
    height: 28px;
    line-height: 28px;
}

.navbar {
    margin-bottom: 0;
	border-bottom: 1px solid #dddddd;
	box-shadow: 0px 0px 4px rgba(0,0,0,0.1);
	background: #ffffff;
}
.navbar .container {width: auto;padding-left: 0px;padding-right: 0px;}
.navbar .navbar-brand {
    float: left;
    line-height: 50px;
    margin-left: 0;
    padding: 0 40px 0 30px;
    font-size: 18px;
    color: #999999;
}

.navbar li.active a {
	color: #ff4902;
	border-bottom: 2px solid #ff4902;
}

.main-container {
    padding: 0 15px;
}
    
    
    
/*--------------------------------------------------------------------------*/
.menu {
  list-style: none;
  border-bottom: 0.1em solid black;
  margin-bottom: 2em;
  padding: 0 0 0.5em;
}

.menu:before {
  content: "[";
}

.menu:after {
  content: "]";
}

.menu > li {
  display: inline;
}

.menu > li:before {
  content: "|";
  padding-right: 0.3em;
}

.menu > li:nth-child(1):before {
  content: "";
  padding: 0;
}


.expander {
    border: 1px solid black;
    width: 250px;
}

.expander>.title {
    background-color: black;
    color: white;
    padding: .1em .3em;
    cursor: pointer;
}

.expander>.body {
    padding: .1em .3em;
}